# ################################################################################
# purpose: rabbitmq-consumer - microservice to consume msessages from rabbitmq server - multiple queues - queue1..queue5
# status: working
#
# build java code
mvn clean install -DskipTests
#
docker stop c-rabbitmq-consumer
docker rm c-rabbitmq-consumer
docker rmi i-rabbitmq-consumer
#
# build
docker build -t i-rabbitmq-consumer .
#
# run
docker run -d --name c-rabbitmq-consumer --network n-rabbitmq -e RABBITMQ_HOST=c-rabbitmq -e RABBITMQ_PORT=5672 -p 8675:8082 i-rabbitmq-consumer

# Optional:
	-e CONSUMER_INTERVAL_MS=1000
	-e RABBITMQ_HOST=host.docker.internal
#
#docker stop c-rabbitmq-consumer
#docker start c-rabbitmq-consumer
#
# connect
docker exec -it c-rabbitmq-consumer /bin/bash
#
# health check
curl -l http://localhost:8675/actuator/health
curl -l http://localhost:8675/actuator/info
curl -l http://localhost:8675/actuator/metrics | jq
#
# ################################################################################
