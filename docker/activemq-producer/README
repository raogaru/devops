# ################################################################################
# purpose: activemq-producer - microservice to procude msessages to activemq server - multiple queues - queue1..queue5
# status: working
#
# build java code
mvn clean install -DskipTests
#
docker stop c-activemq-producer
docker rm c-activemq-producer
docker rmi i-activemq-producer
#
# build
docker build -t i-activemq-producer .
#
# run
docker run -d --name c-activemq-producer --network=n-activemq -e SPRING_ACTIVEMQ_BROKER-URL=tcp://c-activemq:61616 -p 8163:8082 -e PRODUCER_INTERVAL_MS=1000 i-activemq-producer
#
#docker stop c-activemq-producer
#docker start c-activemq-producer
#
# connect
docker exec -it c-activemq-producer /bin/bash
#
# logs
docker logs c-activemq-producer
#
# ################################################################################
