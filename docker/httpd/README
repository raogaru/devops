# ################################################################################
# purpose: httpd database
# status: working
#
docker stop c-httpd
docker rm c-httpd
docker rmi i-httpd
#
# build
docker build -t i-httpd .
#
# run
docker run -d --name c-httpd -p 8071:80  i-httpd
docker run -d --name c-httpd -p 8071:80 -v ./html:/usr/local/apache2/htdocs/ i-httpd
#
docker stop c-httpd
docker start c-httpd
#
# connect
docker exec -it c-httpd /bin/bash
#
# connect from webconsole
http://localhost:8071

# ################################################################################
