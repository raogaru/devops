# ################################################################################
# purpose: gitlab server for version control
# status: working
#
docker stop c-gitlab
docker rm c-gitlab
docker rmi i-gitlab
#
# build
docker build -t i-gitlab .
#
# run
mkdir data logs
docker run -d --name c-gitlab --network n-raogaru -p 8154:80 -p 8155:22 i-gitlab
docker run -d --name c-gitlab --network n-raogaru -p 8154:80 -p 8155:22 -v ./data:/var/opt/gitlab -v ./logs:/var/log/gitlab i-gitlab
#
docker stop c-gitlab
docker start c-gitlab
#
# connect
docker exec -it c-gitlab /bin/bash
#
#connecting from browser
# get password
docker exec -it c-gitlab cat /etc/gitlab/initial_root_password
# 
http://localhost:8154
user: root
password: obtained from /etc/gitlab/initial_root_password

# ################################################################################
