# ################################################################################
# purpose: amazon linux 2023 (al2023)
# status: working
#
docker stop c-al2023
docker rm c-al2023
docker rmi i-al2023
#
# build
docker build -t i-al2023 .
#
# run
docker run -d --name c-al2023 i-al2023 tail -f /dev/null
#
docker stop c-al2023
docker start c-al2023
#
# connect
docker exec -it c-al2023 /bin/bash
#
# run and connect at same time - but container will be gone when you exit container
docker run -it --rm --name c-al2023b i-al2023 
# ################################################################################
